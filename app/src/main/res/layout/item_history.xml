<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemRideDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="@string/total_ride_time"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/itemTotalRideTimeValue"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/deleteHistoryItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@color/mainGreenColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_weight="0.6"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/max_speed"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/itemMaxSpeedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="23sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/avg_speed"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/itemAvgValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.6"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/distance_history"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/itemDistanceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>