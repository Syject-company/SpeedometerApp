<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:lineSpacingExtra="10dp"
        android:text="@string/pro_summary"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="@string/title_ob4"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_landingpage" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:text=""
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/btn_start_trial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_selector"
        android:paddingBottom="20dp"
        android:text="@string/start_trial"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/backgroundColor"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/bulletpoint1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">


        <ImageView
            android:id="@+id/check1"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="Icon"
            app:srcCompat="@drawable/ic_check_green" />

        <TextView
            android:id="@+id/bp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="24dp"
            android:lineSpacingExtra="5dp"
            android:paddingTop="2dp"
            android:text="@string/pro_benefit_1"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bulletpoint2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bulletpoint1">


        <ImageView
            android:id="@+id/check2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="Icon"
            app:srcCompat="@drawable/ic_check_green" />

        <TextView
            android:id="@+id/bp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="24dp"
            android:lineSpacingExtra="5dp"
            android:paddingTop="2dp"
            android:text="@string/pro_benefit_2"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bulletpoint3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bulletpoint2">


        <ImageView
            android:id="@+id/check3"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:contentDescription="Icon"
            app:srcCompat="@drawable/ic_check_green" />

        <TextView
            android:id="@+id/bp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="24dp"
            android:lineSpacingExtra="5dp"
            android:paddingTop="2dp"
            android:text="@string/pro_benefit_3"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


    <Button
        android:id="@+id/close_landingpage"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/backgroundColor"
        android:fontFamily="sans-serif"
        android:padding="0dp"
        android:text="x"
        android:textAllCaps="false"
        android:textColor="#8F8F8F"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/trial_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/trial_desc_1"
        android:textColor="@color/backgroundColor"
        android:textSize="12sp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_trial"
        app:layout_constraintEnd_toEndOf="@+id/btn_start_trial"
        app:layout_constraintStart_toStartOf="@+id/btn_start_trial" />

    <Button
        android:id="@+id/btn_start_alt_trial"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="false"
        android:minHeight="0dp"
        android:padding="10dp"
        android:selectAllOnFocus="false"
        android:text="@string/alternative_subscription"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_start_trial"
        app:layout_constraintStart_toStartOf="@+id/btn_start_trial"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_trial" />

    <TextView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="Icon"
        android:text="@string/app_name"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/agency"
        android:text="@string/pro"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/logo_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>